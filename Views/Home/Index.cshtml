@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        /* Carousel container */
        .carousel-container {
            display: flex;
            align-items: center;
            width: 80%;
            margin: 0 auto;
        }

        /* Header text */
        .header-text {
            margin-right: 20px;
            font-size: 24px;
        }

        /* Carousel */
        .carousel {
            display: flex;
            overflow-x: hidden;
            width: 100%;
            max-width: 600px;
        }

        /* Individual slide */
        .slide {
            flex: 0 0 auto;
            width: 100%;
            transition: transform 0.5s ease;
        }

            /* Image inside slide */
            .slide img {
                width: 100%;
                height: auto;
            }
    </style>
</head>
<body>
    <div class="carousel-container">
        <h2 class="header-text">Carousel Header</h2>
        <div class="carousel">
            <div class="slide">
                <img src="../Views/Shared/image1.jpg" alt="Image 1">
            </div>
            <div class="slide">
                <img src="../Views/Shared/image2.jpg" alt="Image 2">
            </div>
            <div class="slide">
                <img src="../Views/Shared/image3.jpg" alt="Image 3">
            </div>
        </div>
    </div>
</body>
</html>
